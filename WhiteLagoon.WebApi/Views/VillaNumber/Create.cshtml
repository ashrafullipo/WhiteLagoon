@using WhiteLagoon.Domain.Entities
@model VillaNumber

@{
    ViewData["Title"] = "Create Villa Number";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-house-add-fill me-2"></i>Create New Villa Number</h4>
                    <a asp-action="Index" class="btn btn-light btn-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div class="row">
                            <div class="form-group">
                                <label asp-for="VillaId" class="control-label"></label>
                                <select asp-for="VillaId" asp-items="ViewBag.Villas" class="form-control">
                                    <option value="">-- Select Villa --</option>
                                </select>
                                <span asp-validation-for="VillaId" class="text-danger"></span>
                            </div>


                            <div class="col-md-6 mb-3">
                                <label asp-for="Villa_Number" class="form-label fw-semibold"></label>
                                <input asp-for="Villa_Number" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter Villa Number" />
                                <span asp-validation-for="Villa_Number" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Special_Details" class="form-label fw-semibold"></label>
                                <textarea asp-for="Special_Details" class="form-control shadow-sm" rows="3" placeholder="Enter villa description"></textarea>
                                <span asp-validation-for="Special_Details" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-success px-4 shadow-sm">
                                <i class="bi bi-save-fill me-2"></i>Create Villa
                            </button>
                            <a asp-controller="VillaNumber" asp-action="Index" class="btn btn-outline-secondary ms-2 px-4 shadow-sm">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
