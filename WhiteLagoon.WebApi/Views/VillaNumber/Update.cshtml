@model WhiteLagoon.Domain.Entities.VillaNumber

@{
    ViewData["Title"] = "Update Villa Number";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center rounded-top-4">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i> Update Villa Number
                    </h4>
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="Villa_Number" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Villa_Number" class="form-label fw-semibold"></label>
                                <input asp-for="Villa_Number" class="form-control shadow-sm" readonly />
                                <span asp-validation-for="Villa_Number" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="VillaId" class="form-label fw-semibold"></label>
                                <input asp-for="VillaId" class="form-control shadow-sm" placeholder="Enter Villa ID" />
                                <span asp-validation-for="VillaId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Special_Details" class="form-label fw-semibold"></label>
                                <textarea asp-for="Special_Details" class="form-control shadow-sm" rows="3" placeholder="Enter special details (optional)"></textarea>
                                <span asp-validation-for="Special_Details" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-warning px-4 shadow-sm text-dark fw-semibold">
                                <i class="bi bi-save2-fill me-2"></i> Update Villa Number
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4 shadow-sm">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

