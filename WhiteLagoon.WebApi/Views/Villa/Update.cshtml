@model WhiteLagoon.Domain.Entities.Villa

@{
    ViewData["Title"] = "Update Villa";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center rounded-top-4">
                    <h4 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Update Villa</h4>
                    <a asp-action="Index" class="btn btn-outline-dark btn-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Update" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label fw-semibold"></label>
                                <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter villa name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label fw-semibold"></label>
                                <input asp-for="Price" type="number" step="0.01" class="form-control shadow-sm" placeholder="Enter price per night" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label fw-semibold"></label>
                                <textarea asp-for="Description" class="form-control shadow-sm" rows="3" placeholder="Enter villa description"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="sqft" class="form-label fw-semibold"></label>
                                <input asp-for="sqft" type="number" class="form-control shadow-sm" placeholder="Enter square feet" />
                                <span asp-validation-for="sqft" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Occupancy" class="form-label fw-semibold"></label>
                                <input asp-for="Occupancy" type="number" class="form-control shadow-sm" placeholder="Enter number of guests" />
                                <span asp-validation-for="Occupancy" class="text-danger small"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="ImageUrl" class="form-label fw-semibold"></label>
                                <input asp-for="ImageUrl" type="text" class="form-control shadow-sm" placeholder="Enter image URL" />
                                <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="text-end mt-4">
                            <button type="submit" class="btn btn-warning px-4 shadow-sm text-dark fw-semibold">
                                <i class="bi bi-save2-fill me-2"></i>Update Villa
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4 shadow-sm">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
