@model IEnumerable<WhiteLagoon.Domain.Entities.Villa>

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Villa List</h1>
        <a asp-controller="Villa" asp-action="Create" class="btn btn-success">
            Create Villa
        </a>
    </div>

    <!-- Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-success">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Sqft</th>
                <th>Occupancy</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price</td>
                    <td>@obj.sqft</td>
                    <td>@obj.Occupancy</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Villa" asp-action="Update" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Villa" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3-fill"></i> Delete
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
