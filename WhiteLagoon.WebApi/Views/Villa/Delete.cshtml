@model WhiteLagoon.Domain.Entities.Villa

@{
    ViewData["Title"] = "Delete Villa";
}

<div class="container mt-4">
    <h2 class="text-danger">Delete Villa</h2>
    <hr />

    <div class="alert alert-warning">
        <strong>Are you sure</strong> you want to delete the villa:
        <span class="fw-bold">@Model.Name</span>?
    </div>

    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Sqft</dt>
        <dd class="col-sm-10">@Model.sqft</dd>

        <dt class="col-sm-2">Occupancy</dt>
        <dd class="col-sm-10">@Model.Occupancy</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash3"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>
